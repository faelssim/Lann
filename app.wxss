/**app.wxss**/
@import './styles/iconfont.wxss';
page{
  --theme-color: #ff6706;
  --light-gray-color: #f5f5f5;
  --gray-color: #f0f0f0;
  --active-color: blue;
  --text-gray: #777;
}
.container-100 {
  height: 100vh;
}
.w-100{
  width: 100vw !important;
}
.bod{
  border: 0.5rpx solid #e5e5e5;
}
.bod-bottom{
  border-bottom: 0.5rpx solid #e5e5e5;
}
.bod-right{
  border-right: 0.5rpx solid #e5e5e5;
}
.bod-top{
  border-top: 0.5rpx solid #e5e5e5;
}
.bod-left{
  border-left: 0.5rpx solid #e5e5e5;
}
.ie-box{
  box-sizing: border-box;
}
.flex-row{
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.flex-column{
  display: flex;
  align-items: flex-start;
  justify-content: center;
  flex-direction: column;
}
.shrink-0{
  flex-shrink: 0;
}
.banner-img-20{
  width: 100%;
  height: 20vh;
}
.banner-img-30{
  width: 100%;
  height: 30vh;
}
.banner-img-40{
  width: 100%;
  height: 40vh;
}
.banner-img-50{
  width: 100%;
  height: 50vh;
}
.label-deep-dark{
  font-size: 35rpx;
  font-weight: 900;
  padding: 20rpx;
}
.padding-20{
  padding: 20rpx;
}
.ml-20{
  margin-left: 20rpx;
}
.mr-20{
  margin-right: 20rpx;
}
.mb-20{
  margin-bottom: 20rpx;
}
.mt-20{
  margin-top: 20rpx;
}
.mt-10{
  margin-top: 10rpx;
}
.active-box:active{
  background: #f8f8f8;
}
.btn-submit{
  width: auto !important;
  padding: 10rpx 20rpx;
  font-weight: normal;
  border-radius: 50rpx;
  background: var(--theme-color);
  color: #fff;
  border: 2rpx solid transparent;
}
.btn-submit-ghost{
  width: auto !important;
  padding: 10rpx 20rpx;
  font-weight: normal;
  border-radius: 50rpx;
  color: var(--theme-color);
  border: 2rpx solid var(--theme-color);
}
.btn-submit-disabled{
  color: var(--text-gray);
  border: 2rpx solid var(--text-gray);
}
.btn-submit-active:active{
  background: transparent;
  color: var(--theme-color);
  border: 2rpx solid;
}
.btn-submit-radius-0{
  border-radius: 0;
}
.btn-submit-large{
  padding: 25rpx;
}
.btn-submit-small{
  padding: 15rpx;
}
.image-small{
  width: 80rpx;
  height: 80rpx;
}
.image-large{
  width: 80rpx;
  height: 80rpx;
}
.image-mini{
  width: 80rpx;
  height: 80rpx;
}
.image-radius{
  border-radius: 50%;
}
.image-radius-10{
  border-radius: 10rpx;
}
.text-40{
  font-size: 40rpx;
}
.text-30{
  font-size: 30rpx;
}
.text-25{
  font-size: 25rpx;
}
.text-gray{
  color: #aaa;
}
.text-theme{
  color: var(--theme-color);
}
.input-placeholder{
  font-weight: 100;
  color: #c5c5c5;
  font-size: 30rpx;
}