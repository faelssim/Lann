/* components/Calendar/Calendar.wxss */
.f-calendar{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 9;
  background: rgba(0,0,0,0.5);
  align-items: center;
}
.f-calendar-container{
  width: 80vw;
}
.f-calendar-box{
  /*  */
  width: 100%;
  background: #fff;
  padding-bottom: 30rpx;
  position: relative;
  transform: translateY(-40rpx);
  opacity: 0;
}
.f-calendar-header{
  background: var(--light-gray-color);
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  padding: 20rpx 0;
}
.f-calendar-top text{
  flex: 1 0 auto;
  text-align: center;
}
.f-calendar-item{
  margin-top: 20rpx;
}
.f-calendar-cell{
  width: calc(100% / 7);
  text-align: center;
  position: relative;
}
.f-calendar-cell-2{
  padding: 20rpx 0;
}
.f-text-sub{
  font-size: 20rpx;
  position: absolute;
  bottom: -5rpx;
  white-space: nowrap;
  left: 50%;
  transform: translateX(-50%);
  color: var(--theme-color);
}
.f-text-bold{
  font-weight: 900;
}
.f-text-tiny{
  font-weight: 200;
}
.f-text-disabled{
  color: var(--gray-color)
}
.f-text-checked{
  color: red;
}
.f-cell-bound-start{
  background: var(--theme-color);
  color: #fff;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
.f-cell-bound-end{
  background: var(--theme-color);
  color: #fff;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.f-cell-mid{
  background: var(--light-theme-color);
  color: #fff;
}
.f-calendar-mid{
  flex-wrap: wrap;
}
.f-c-close{
  position: absolute;
  right: 0;
  top: 0;
  font-size: 50rpx;
  color: #fff;
  transform: translateY(-100%);
}